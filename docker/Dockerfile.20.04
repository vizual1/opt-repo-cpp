FROM ubuntu:20.04

ENV DEBIAN_FRONTEND=noninteractive \
    TZ=Etc/UTC \
    PATH="/opt/vcpkg:/opt/venv/bin:$PATH"

# Base tools and dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    software-properties-common gnupg lsb-release apt-transport-https ca-certificates wget curl \
    build-essential cmake ninja-build pkg-config ccache meson \
    python3 python3-pip python3-venv python3-setuptools python3-wheel python3-dev \
    git zip unzip tar \
    autoconf autoconf-archive automake libtool \
    libmount-dev libblkid-dev libcap-dev libselinux1-dev \
    liblzma-dev zlib1g-dev libzstd-dev liblzo2-dev liblz4-dev \
    libudev-dev libseccomp-dev libgcrypt20-dev libgnutls28-dev libssl-dev \
    gettext libffi-dev libcurl4-openssl-dev libpcre2-dev \
    clang-10 clang++-10 lldb-10 lld-10 \
&& ln -sf /usr/bin/clang-10 /usr/bin/clang \
&& ln -sf /usr/bin/clang++-10 /usr/bin/clang++ \
&& rm -rf /var/lib/apt/lists/*

# Core C++ libraries
RUN apt-get update && apt-get install -y --no-install-recommends \
    libboost-all-dev \
    libgtest-dev libgmock-dev \
    qtbase5-dev qtbase5-dev-tools \
    libfmt-dev libspdlog-dev \
    && rm -rf /var/lib/apt/lists/*

# Other useful C++ libs
RUN apt-get update && apt-get install -y --no-install-recommends \
    libeigen3-dev libprotobuf-dev protobuf-compiler libgrpc-dev libgrpc++-dev \
    bison flex \
    && rm -rf /var/lib/apt/lists/*

# vcpkg
RUN git clone https://github.com/microsoft/vcpkg.git /opt/vcpkg && \
    /opt/vcpkg/bootstrap-vcpkg.sh -disableMetrics

WORKDIR /workspace
CMD ["/bin/bash"]
