+// Fast integer to string
+void CountPrintPrimes::appendUInt(uint64_t n)
+{
+  if (n == 0)
+  {
+    stringBuffer_ += '0';
+    return;
+  }
+
+  char buf[20];
+  int pos = 0;
+  while (n != 0)
+  {
+    buf[pos++] = char('0' + (n % 10));
+    n /= 10;
+  }
+
+  for (int i = pos - 1; i >= 0; --i)
+    stringBuffer_ += buf[i];
+}
