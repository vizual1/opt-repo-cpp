@@ -79,6 +79,12 @@ void
 StatisticsCounters::increment(Statistic statistic, int64_t value)
 {
   const auto i = static_cast<size_t>(statistic);
+  // Short-circuit when there's no change to avoid unnecessary work (resize,
+  // memory writes, etc.). If the counter doesn't yet exist we still resize so
+  // callers that expect the counter to be created by increment() keep working.
+  if (value == 0 && i < m_counters.size()) {
+    return;
+  }
   if (i >= m_counters.size()) {
     m_counters.resize(i + 1);
   }
