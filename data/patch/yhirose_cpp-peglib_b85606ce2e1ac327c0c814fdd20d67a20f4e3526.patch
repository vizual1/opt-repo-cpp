+      return std::string_view(a) == b;
+    }
+    bool operator()(std::string_view a, const std::string &b) const noexcept {
+      return a == std::string_view(b);
+    }
+    bool operator()(const std::string &a, const std::string &b) const noexcept {
+      return a == b;
+    }
+  };
